<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fixdeviceinfo.battery.overlay"
    android:versionCode="1"
    android:versionName="1.0">
    <!-- targetPackage must point to the system framework for RRO overlays -->
    <!-- Removed targetName to avoid matching failures if 'PowerProfile' is not defined in target -->
    <!-- Changed isStatic to false to allow runtime control and visibility in overlay list -->
    <overlay
        android:targetPackage="android"
        android:priority="999"
        android:isStatic="false" />
    <application android:hasCode="false" />
</manifest>
